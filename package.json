{
  "name": "angular-ts",
  "description": "An approach to using ES6 class in Angular JS 1.x with Typescript",
  "version": "0.1.0",
  "private": true,
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "devDependencies": {
    "@types/colors": "0.6.33",
    "@types/jasmine": "^2.5.35",
    "@types/karma": "^0.13.33",
    "@types/lodash": "4.14.37",
    "@types/node": "6.0.45",
    "@types/oclazyload": "0.0.31",
    "@types/webpack": "^1.12.35",
    "@types/yargs": "0.0.33",
    "colors": "^1.1.2",
    "eslint": "2.11.1",
    "eslint-config-airbnb": "9.0.1",
    "eslint-plugin-import": "1.8.1",
    "eslint-plugin-jsx-a11y": "1.2.2",
    "eslint-plugin-react": "5.1.1",
    "jasmine": "2.4.1",
    "karma": "0.13.22",
    "karma-chrome-launcher": "1.0.1",
    "karma-jasmine": "1.0.2",
    "karma-webpack": "1.7.0",
    "live-server": "1.0.0",
    "npm-run-all": "3.1.0",
    "sinon": "1.17.4",
    "ts-loader": "0.8.2",
    "ts-node": "1.4.1",
    "tslint": "^3.15.1",
    "typescript": "2.0.3",
    "webpack": "1.13.0",
    "yargs": "6.0.0"
  },
  "dependencies": {
    "@types/angular": "^1.5.16",
    "angular": "^1.5.8",
    "ts-helpers": "1.1.1"
  },
  "eslintConfig": {
    "extends": "airbnb",
    "env": {
      "browser": true,
      "es6": true
    }
  },
  "scripts": {
    "build-tools": "ts-node ./build-tools/transpile.ts build-tools",
    "karma": "karma start ./build/karma.config.js --single-run",
    "test": "run-s build-tools karma",
    "webpack": "webpack --config ./build/webpack.config.js --watch",
    "dev": "run-s build-tools webpack",
    "tsc": "bash ./build-tools/transpile.sh",
    "pre-release": "./build/pre-publish.sh",
    "release": "./build/publish.sh",
    "dev-uglify": "export UGLIFY=true; webpack --config ./build-tools/webpack.config.js --watch",
    "serve": "live-server --port=3004 --open=./example",
    "start": "npm run serve & npm run dev"
  }
}
